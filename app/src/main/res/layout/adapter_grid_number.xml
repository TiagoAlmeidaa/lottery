<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="number"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="@dimen/adapter_grid_numbers_size"
        android:layout_height="@dimen/adapter_grid_numbers_size"
        android:layout_margin="@dimen/adapter_number_margin"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:elevation="2dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewGridNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{number}"
            android:textStyle="bold"
            android:textSize="@dimen/adapter_grid_numbers_text_size"/>

    </LinearLayout>

</layout>
