<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/button_card_view_margin_start_end_top"
    android:layout_marginTop="@dimen/button_card_view_margin_start_end_top"
    android:layout_marginEnd="@dimen/button_card_view_margin_start_end_top"
    android:layout_marginBottom="@dimen/main_view_margin"
    android:backgroundTint="@color/button_card_view_color"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="vertical"
        android:paddingStart="@dimen/button_card_view_padding_content"
        android:paddingEnd="@dimen/button_card_view_padding_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_icon"
            android:layout_width="@dimen/size_icons"
            android:layout_height="@dimen/size_icons" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_contest_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_card_view_margin_top"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_card_view_text_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>