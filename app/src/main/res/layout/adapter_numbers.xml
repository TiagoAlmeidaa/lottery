<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="number"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="@dimen/adapter_number_size"
        android:layout_height="@dimen/adapter_number_size"
        android:layout_margin="@dimen/adapter_number_margin"
        android:background="@drawable/circle_shape"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{number}"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/adapter_number_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</layout>
